<div class="row d-flex justify-content-center">
  <div  class="col-md-6 p-5">
    <% @articles.each do |article| %>
      <h3 class="m-3"><%= link_to article.title, article_path(article.id), class: "text-decoration-none" %></h3>
      <p><%= article.content.first(70) %></p>
    <% end %>
  </div>
</div>
