<div class="container">
  <div class="row d-flex justify-content-center p-5">
    <div  class="row col-md-6">
      <div class="col-10">
        <h2 class="fs-3"><%= @article.title %></h2>
      </div>
      <div class="col-1 p-1">
        <%= link_to 'Edit', edit_article_path(@article.id) %>
      </div>
      <div class="col-1 p-1">
        <%= link_to 'Delete', article_path(@article.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
      </div>
    </div>
  </div>
  <div class="row d-flex justify-content-center p-5 pt-0">
    <div class="row col-md-6">
      <div class="col">
          <p><%= @article.content %></p>
      </div>
    </div>
  </div>
</div>
